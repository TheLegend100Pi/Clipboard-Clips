<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:clip="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Project100Pi.clip.AboutActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/rsz_clipico1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_alignLeft="@+id/about_appName"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="Developed By Team100Pi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#999999"
        android:textSize="15sp" />

    <com.Project100Pi.clip.MyTextView
        android:id="@+id/about_appName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Clipboard Clips "
        android:textColor="#dddddd"
        android:textSize="40sp"
        android:textStyle="bold"
        clip:fontName="Exo-Bold-Italic.otf" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="#Project100Pi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="TheLegend100Pi@gmail.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
