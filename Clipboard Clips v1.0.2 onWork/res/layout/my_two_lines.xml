<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:clip="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <com.Project100Pi.clip.MyTextView
            android:id="@+id/line_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textColor="#dddddd"
            android:textSize="20sp"
            clip:fontName="Exo-Italic.otf" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listItemContainer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/line_app"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.57"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line_b"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="?android:selectableItemBackground"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_action_overflow" />

    </LinearLayout>

</LinearLayout>
