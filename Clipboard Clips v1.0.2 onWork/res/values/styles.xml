<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="customShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail.Light</item>
        <item name="sv_backgroundColor">#3333B5E5</item>
        <item name="sv_buttonText">@android:string/ok</item>
    </style>

    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="sv_backgroundColor">#33B5E5</item>
        <item name="sv_buttonText">@android:string/ok</item>
    </style>
    
       <style name="MyShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="android:gravity">bottom</item>
        <item name="sv_backgroundColor">#33B5E5</item>
     
        <item name="sv_buttonText">Next</item>
    </style>
     <style name="MyShowcaseView1">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="android:gravity">bottom</item>
        <item name="sv_backgroundColor">#9533B5E5</item>
     
        <item name="sv_buttonText">Ok.I got it.</item>
    </style>
    
        <style name="MyShowcaseView2">
          <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title1</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail1</item>
        <item name="android:gravity">bottom</item>
        <item name="sv_backgroundColor">#33B5E5</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#050d28</item>
           <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">33sp</item>
    </style>
    
      <style name="TextAppearance.ShowcaseView.Title1" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#050d28</item>
           <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
            <item name="android:textStyle">normal|italic</item>
        <item name="android:textSize">22sp</item>
    </style>
    
       <style name="TextAppearance.ShowcaseView.Detail1" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
            <item name="android:textStyle">normal|italic</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:shadowRadius">0</item>
    </style>
    

</resources>
